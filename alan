<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
	</head>
	<body>
		<div id="start">
			<input id="ABC" type="text">
			<button id="copy" onclick="copy()">复制</button>
			<input id="a" type="text"><br />
			<span id="b" style="color:blue;"></span>
		</div>
	</body>
	<script>
		function copy() {
			var abc = document.getElementById("ABC").value;
			document.getElementById("a").value = abc;
			document.getElementById("b").innerHTML = "复制成功";
		}
	</script>
</html>
